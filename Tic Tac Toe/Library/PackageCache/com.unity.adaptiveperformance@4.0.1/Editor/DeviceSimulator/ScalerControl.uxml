<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements">
    <ui:Foldout text="Scaler" value="True" name="scaler">
        <Style src="AdaptivePerformanceExtension.uss" />
        <ui:Toggle label="Enabled" name="scaler-toggle" tooltip="Enable the scaler to effect the scene Quality. User Level Override to adjust the level."/>
        <uie:IntegerField label="Level Override" value="42" name="scaler-value"  tooltip="Override the indexer level for this scaler. Control the quality by changing the Level Override. The higher the level, the poorer the quality."/>
        <uie:IntegerField label="Max Level" value="0" name="scaler-max-level-value" tooltip="The Max Level defines amount of levels a scaler can have."/>
        <uie:FloatField label="Min Scale" value="0.0" name="scaler-min-value" tooltip="The min scale defines the lowest value a scaler can reach."/>
        <uie:FloatField label="Max Scale" value="1.0" name="scaler-max-value" tooltip="The max scale defines the largest value a scaler can reach."/>
    </ui:Foldout>
</ui:UXML>
